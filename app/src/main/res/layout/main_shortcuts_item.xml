<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/short_item_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <RelativeLayout
            android:id="@+id/short_item_cardView_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/short_item_cardView_mainIcon_layout"
                android:layout_width="80dp"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:gravity="center_horizontal"
                android:background="@color/purple_200">

                <TextView
                    android:id="@+id/short_item_cardView_mainIcon_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="S"
                    android:textSize="56sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/short_item_cardView_title_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/short_item_cardView_mainIcon_layout"
                android:layout_centerVertical="true"


                android:text="Loading"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="24sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>