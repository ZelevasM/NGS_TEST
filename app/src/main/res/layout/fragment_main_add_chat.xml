<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/main_add_chat_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="24dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/main_add_chat_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_camera" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/main_add_chat_name_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/main_add_chat_avatar"
            android:layout_centerVertical="true"
            android:hint="Chat Name"
            app:boxStrokeColor="@color/light_pink"
            app:boxStrokeWidth="1dp"
            app:endIconMode="clear_text"
            app:endIconTint="@color/light_pink"
            app:hintTextColor="@color/light_pink">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/main_add_chat_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_add_chat_members_text"
        android:text="Chat Members"
        android:layout_below="@+id/main_add_chat_holder"
        android:textColor="@color/black"
        android:layout_alignStart="@+id/main_add_chat_holder"/>
    <Button
        android:id="@+id/main_add_chat_add_button"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_add_chat_members_text"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="Add Members"
        android:background="@null"
        android:textColor="@color/light_pink"
        android:textSize="18sp"
        app:icon="@drawable/ic_add"
        app:iconTint = "@color/light_pink"/>
</RelativeLayout>