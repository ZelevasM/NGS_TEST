<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_options_cardView"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile_options_layout"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Language"
                    android:textColor="@color/light_pink"
                    android:gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.NGS_Profile.TextAppearance.Normal"/>
                <Spinner
                    android:id="@+id/profile_language_menu"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="0dp"
                    android:layout_weight="0"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="40dp"
                android:background="@color/light_grey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Homepage"
                    android:textColor="@color/light_pink"
                    android:gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.NGS_Profile.TextAppearance.Normal"/>
                <Spinner
                    android:id="@+id/profile_homepage_menu"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="0dp"
                    android:layout_weight="0"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="40dp"
                android:background="@color/light_grey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Date Format"
                    android:textColor="@color/light_pink"
                    android:gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.NGS_Profile.TextAppearance.Normal"/>
                <Spinner
                    android:id="@+id/profile_date_format_menu"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="0dp"
                    android:layout_weight="0"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="40dp"
                android:background="@color/light_grey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Time Format"
                    android:textColor="@color/light_pink"
                    android:gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.NGS_Profile.TextAppearance.Normal"/>
                <Spinner
                    android:id="@+id/profile_time_format_menu"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="0dp"
                    android:layout_weight="0"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="40dp"
                android:background="@color/light_grey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Week Start"
                    android:textColor="@color/light_pink"
                    android:gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.NGS_Profile.TextAppearance.Normal"/>
                <Spinner
                    android:id="@+id/profile_week_start_menu"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="0dp"
                    android:layout_weight="0"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="40dp"
                android:background="@color/light_grey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Expand Subtasks by Default"
                    android:textColor="@color/light_pink"
                    android:gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.NGS_Profile.TextAppearance.Normal"/>
                <Spinner
                    android:id="@+id/profile_expand_subtask_menu"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="0dp"
                    android:layout_weight="0"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="40dp"
                android:background="@color/light_grey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Add Tasks"
                    android:textColor="@color/light_pink"
                    android:gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.NGS_Profile.TextAppearance.Normal"/>
                <Spinner
                    android:id="@+id/profile_new_task_menu"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="0dp"
                    android:layout_weight="0"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>