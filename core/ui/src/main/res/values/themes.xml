<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.V24.Theme.NGS_Test_Login" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_pink</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/light_pink</item>
        <item name="android:navigationBarColor">@color/light_pink</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Fonts -->
        <item name="android:fontFamily">@font/roboto_regular_family</item>

        <!-- View Styles -->
        <!--<item name="android:button">@style/Widget.NGS_Test_Login.Button</item> -->
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.NGS_Test_Login.Main" parent="Base.V24.Theme.NGS_Test_Login">
        <item name="colorPrimary">@color/light_grey</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/light_grey</item>
        <item name="android:navigationBarColor">@color/light_grey</item>

        <item name="actionBarStyle">@style/Widget.NGS_Test_Login.ActionBar</item>
        <item name="android:datePickerDialogTheme">@style/NGS_Date_Picker_Dialog</item>
        <item name="android:timePickerDialogTheme">@style/NGS_Time_Picker_Dialog</item>

        <item name="textInputOutlinedStyle">@style/Widget.NGS_Test_Login.TextInput</item>
    </style>

    <!-- Style for Login -->
    <style name="Theme.NGS_Test_Login.Login" parent="Base.V24.Theme.NGS_Test_Login" />
</resources>