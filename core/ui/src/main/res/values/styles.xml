<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.NGS_Test_Login.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>
    
    <style name="Widget.NGS_Test_Login.Button.Main" parent="Widget.NGS_Test_Login.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Widget.NGS_Test_Login.Button.Small" parent="Widget.NGS_Test_Login.Button">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:backgroundTint">@color/lighter_pink</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Widget.NGS_Test_Login.Button.Add" parent = "Widget.NGS_Test_Login.Button.Small">
        <item name="shapeAppearanceOverlay">@style/Widget.NGS_Test_Login.Button.Add.Shape</item>
    </style>

    <style name="Widget.NGS_Test_Login.Button.Add.Shape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30%</item>
    </style>

    <style name="Widget.NGS_Test_Login.ActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="elevation">0dp</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="Widget.NGS_Test_Login.TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20%</item>
    </style>


    //Profile Styles
    <style name="TextAppearance.NGS_Profile.TextAppearance.Heading" parent="TextAppearance.Material3.DisplayMedium">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.NGS_Profile.TextAppearance.Normal" parent="TextAppearance.Material3.DisplayMedium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.NGS_Profile.TextAppearance.Small" parent="TextAppearance.Material3.DisplayMedium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NGS_Date_Picker_Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/light_blue</item>
        <item name="android:buttonBarNegativeButtonStyle">
            @style/NGS_Date_Picker_Dialog.ButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">
            @style/NGS_Date_Picker_Dialog.ButtonStyle</item>
    </style>

    <style name="NGS_Time_Picker_Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/light_blue</item>
        <item name="android:buttonBarNegativeButtonStyle">
            @style/NGS_Date_Picker_Dialog.ButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">
            @style/NGS_Date_Picker_Dialog.ButtonStyle</item>
    </style>

    <style name="NGS_Date_Picker_Dialog.ButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/light_blue</item>
    </style>
</resources>